#!/bin/bash

# Wrapper script to run migrations via Docker
# Usage: ./migrate
# This script automatically runs migrations inside the Docker container

# Check if docker-compose is available
if ! command -v docker-compose &> /dev/null; then
    echo "âŒ docker-compose not found. Please install Docker Compose."
    exit 1
fi

# Check if containers are running
if ! docker-compose ps | grep -q "Up"; then
    echo "âš ï¸  Docker containers are not running. Starting containers..."
    docker-compose up -d
    
    echo "â³ Waiting for MySQL to be ready..."
    sleep 15
    
    # Check if MySQL is ready
    if ! docker-compose exec -T mysql mysqladmin ping -h localhost -u lexyhands -plexyhands123 &> /dev/null; then
        echo "âŒ MySQL is not ready. Please wait a bit longer and try again."
        exit 1
    fi
fi

# Run migrations inside Docker container
# Pass through any command line arguments (rollback, drop, etc.)
if [ "$1" == "rollback" ]; then
    echo "ğŸ”„ Rolling back migrations..."
    docker-compose exec app php migrate.php rollback ${2:-1}
elif [ "$1" == "drop" ]; then
    echo "âš ï¸  WARNING: This will delete ALL tables from the database!"
    echo "âš ï¸  Continuing with drop operation..."
    docker-compose exec app php migrate.php drop --force
else
    echo "ğŸš€ Running migrations..."
    docker-compose exec app php migrate.php "$@"
fi

exit $?
