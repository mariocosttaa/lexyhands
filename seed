#!/bin/bash

# Wrapper script to run seeders via Docker
# Usage: ./seed [--refresh]
# This script automatically runs seeders inside the Docker container

# Check if docker-compose is available
if ! command -v docker-compose &> /dev/null; then
    echo "❌ docker-compose not found. Please install Docker Compose."
    exit 1
fi

# Check if containers are running
if ! docker-compose ps | grep -q "Up"; then
    echo "⚠️  Docker containers are not running. Starting containers..."
    docker-compose up -d
    
    echo "⏳ Waiting for MySQL to be ready..."
    sleep 15
    
    # Check if MySQL is ready
    if ! docker-compose exec -T mysql mysqladmin ping -h localhost -u lexyhands -plexyhands123 &> /dev/null; then
        echo "❌ MySQL is not ready. Please wait a bit longer and try again."
        exit 1
    fi
fi

# Run seeders inside Docker container
if [ "$1" == "--refresh" ]; then
    echo "🔄 Running seeders with refresh..."
    docker-compose exec app php seed.php --refresh
else
    echo "🌱 Running seeders..."
    docker-compose exec app php seed.php
fi

exit $?
